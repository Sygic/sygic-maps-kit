<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sygic.Light.DarkActionBar"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoExitAnimation">
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="AppTheme.NoExitAnimation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WindowAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:windowExitAnimation">@anim/no_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/no_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_animation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AboutDialogItem">
        <item name="android:textSize">@dimen/fontSizeSmall</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="AboutDialogItemValue">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/fontSizeSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
