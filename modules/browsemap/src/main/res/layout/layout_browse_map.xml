<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="browseMapFragmentViewModel"
            type="com.sygic.maps.module.browsemap.viewmodel.BrowseMapFragmentViewModel" />

        <variable
            name="compassViewModel"
            type="com.sygic.maps.uikit.viewmodels.compass.CompassViewModel" />

        <variable
            name="positionLockFabViewModel"
            type="com.sygic.maps.uikit.viewmodels.positionlockfab.PositionLockFabViewModel" />

        <variable
            name="searchFabViewModel"
            type="com.sygic.maps.uikit.viewmodels.searchfab.SearchFabViewModel" />

        <variable
            name="zoomControlsViewModel"
            type="com.sygic.maps.uikit.viewmodels.zoomcontrols.ZoomControlsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <com.sygic.maps.uikit.views.compass.CompassView
            android:id="@+id/compassView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="@{() -> compassViewModel.onClick()}"
            android:rotation="@{safeUnbox(compassViewModel.rotation)}"
            android:visibility="@{safeUnbox(browseMapFragmentViewModel.compassEnabled) ? View.VISIBLE : View.GONE}"
            app:hideCompassIfNorthUpAllowed="@{safeUnbox(browseMapFragmentViewModel.compassHideIfNorthUp)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:rotation="45"
            tools:visibility="visible" />

        <com.sygic.maps.uikit.views.positionlockfab.PositionLockFab
            android:id="@+id/positionLockFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{() -> positionLockFabViewModel.onClick()}"
            android:visibility="@{safeUnbox(browseMapFragmentViewModel.positionLockFabEnabled) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:state="@{safeUnbox(positionLockFabViewModel.currentState)}"
            tools:visibility="visible" />

        <com.sygic.maps.uikit.views.searchfab.SearchFab
            android:id="@+id/searchFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{() -> searchFabViewModel.onClick()}"
            android:visibility="@{safeUnbox(browseMapFragmentViewModel.searchEnabled) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <com.sygic.maps.uikit.views.zoomcontrols.ZoomControlsMenu
            android:id="@+id/zoomControlsMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="@{safeUnbox(browseMapFragmentViewModel.zoomControlsEnabled) ? View.VISIBLE : View.GONE}"
            app:interactionListener="@{zoomControlsViewModel}"
            app:layout_constraintBottom_toTopOf="@id/positionLockFab"
            app:layout_constraintStart_toStartOf="parent"
            app:tiltType="@{safeUnbox(zoomControlsViewModel.tiltType)}"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>