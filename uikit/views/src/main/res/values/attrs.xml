<resources>

    <attr name="sygicMapSkin" format="string" />
    <attr name="signpostTintColor" format="reference" />
    <attr name="navigationBackgroundColor" format="reference" />
    <attr name="navigationTextColorPrimary" format="reference" />
    <attr name="navigationTextColorSecondary" format="reference" />

    <declare-styleable name="Theme">
        <attr name="compassStyle" format="reference"/>
        <attr name="positionLockFabStyle" format="reference" />
        <attr name="searchFabStyle" format="reference" />
        <attr name="searchToolbarStyle" format="reference" />
        <attr name="searchResultListStyle" format="reference" />
        <attr name="signpostViewStyle" format="reference" />
        <attr name="zoomControlsMenuStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AdvancedInfoView">
        <attr name="imageSource" />
        <attr name="imageDescription" />
        <attr name="titleText" />
        <attr name="suggestionText"/>
        <attr name="actionButtonText"/>
    </declare-styleable>

    <declare-styleable name="EmptyRecyclerView">
        <attr name="emptyView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PositionLockFab">
        <attr name="android:tint" />
        <attr name="android:backgroundTint" />
    </declare-styleable>

    <declare-styleable name="SearchFab">
        <attr name="android:tint" />
        <attr name="android:backgroundTint" />
    </declare-styleable>

    <declare-styleable name="SearchToolbar">
        <attr name="searchIcon" />
        <attr name="clearButtonIcon" />
    </declare-styleable>

    <declare-styleable name="SearchResultList">
        <attr name="itemLayoutId" />
    </declare-styleable>

    <declare-styleable name="SignpostView">
        <attr name="android:background" format="reference" />
        <attr name="android:layout_margin" format="dimension" />
        <attr name="android:layout_marginTop" format="dimension" />
        <attr name="android:layout_marginBottom" format="dimension" />
        <attr name="android:layout_marginStart" format="dimension" />
        <attr name="android:layout_marginEnd" format="dimension" />
    </declare-styleable>

</resources>