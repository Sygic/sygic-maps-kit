<resources>

    <style name="Theme.Sygic.Light.DarkActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/azure_radiance</item>
        <item name="colorPrimaryDark">@color/science_blue</item>
        <item name="colorAccent">@color/azure_radiance</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="navigationDarkTintColor">@color/black</item>
        <item name="navigationLightTintColor">@color/white</item>
    </style>

    <style name="Theme.Sygic.Colored" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/cinnabar</item>
        <item name="colorAccent">@color/fruit_salad</item>

        <item name="android:colorBackground">@color/mine_shaft</item>
        <item name="android:textColorPrimary">@color/mystic</item>
        <item name="android:textColorSecondary">@color/botticelli</item>

        <item name="sygicMapSkin">"night"</item>
    </style>

    <style name="SygicCompassStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/bg_compass</item>
    </style>

    <style name="SygicPositionLockFabStyle">
        <item name="android:tint">?android:attr/colorAccent</item>
        <item name="android:backgroundTint">?android:attr/colorBackground</item>
    </style>

    <style name="SygicSearchFabStyle">
        <item name="android:tint">?android:attr/colorAccent</item>
        <item name="android:backgroundTint">?android:attr/colorBackground</item>
    </style>

    <style name="SygicSearchToolbarStyle">
        <item name="searchIcon">@drawable/ic_search_robust</item>
        <item name="clearButtonIcon">@drawable/ic_close</item>
    </style>

    <style name="SygicSearchResultListStyle">
        <item name="itemLayoutId">@layout/layout_search_item_result_internal</item>
    </style>

    <style name="SygicSignpostViewStyle">
        <item name="android:background">@drawable/bg_navigation_dark_rounded</item>
        <item name="android:layout_margin">@dimen/defaultSignpostViewLayoutMargin</item>
    </style>

    <style name="SygicZoomControlsMenuStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/bg_zoom_controls_button</item>
    </style>

    <style name="PoiDetailItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">24dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>