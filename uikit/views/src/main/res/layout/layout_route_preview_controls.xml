<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        tools:background="@drawable/bg_navigation_light_rounded"
        tools:elevation="@dimen/defaultNavigationElevation"
        tools:gravity="center"
        tools:layout_gravity="center"
        tools:layout_height="wrap_content"
        tools:layout_width="wrap_content"
        tools:parentTag="android.widget.LinearLayout">

        <com.sygic.maps.uikit.views.common.ToggleImageButton
            android:id="@+id/routePreviewControlsPlayPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:src="@drawable/sel_play_pause"
            android:tint="?attr/navigationDarkTintColor" />

        <ImageView
            android:id="@+id/routePreviewControlsSpeedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_fast_forward"
            android:tint="?attr/navigationDarkTintColor" />

        <ImageView
            android:id="@+id/routePreviewControlsStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_stop"
            android:tint="?attr/navigationDarkTintColor" />
    </merge>

</layout>