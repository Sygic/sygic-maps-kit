<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        tools:gravity="center"
        tools:layout_height="match_parent"
        tools:layout_width="match_parent"
        tools:orientation="vertical"
        tools:parentTag="android.widget.LinearLayout">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/none"
            android:tint="?android:attr/textColorSecondary"
            android:visibility="gone"
            tools:src="@drawable/ic_cross"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="48dp"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/fontSizeMedium"
            android:visibility="gone"
            tools:text="No internet connection"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/suggestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="48dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/fontSizeSmall"
            android:visibility="gone"
            tools:text="Check the signal in your area or turn on mobile data or WiFi"
            tools:visibility="visible" />

        <Button
            android:id="@+id/actionButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSizeMedium"
            android:visibility="gone"
            tools:text="Try again"
            tools:visibility="visible" />

    </merge>

</layout>