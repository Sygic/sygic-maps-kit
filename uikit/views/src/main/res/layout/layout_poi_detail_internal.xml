<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="poiDetailInternalViewModel"
            type="com.sygic.maps.uikit.views.poidetail.viewmodel.PoiDetailInternalViewModel" />

    </data>

    <ViewAnimator
        android:id="@+id/poiDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:displayedChild="@{safeUnbox(poiDetailInternalViewModel.contentViewSwitcherIndex)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> poiDetailInternalViewModel.onHeaderClick()}"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/ic_drag_hint_shape" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:text="@{poiDetailInternalViewModel.titleText}"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="20sp"
                    tools:text="Sygic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{poiDetailInternalViewModel.subtitleText}"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="16sp"
                    tools:text="MlynskÃ© nivy 16, 821 09 Bratislava" />

            </LinearLayout>

            <TextView
                style="@style/PoiDetailItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:onClick="@{() -> poiDetailInternalViewModel.onPhoneNumberClick()}"
                android:text="@{poiDetailInternalViewModel.phoneText}"
                android:visibility="@{TextUtils.isEmpty(poiDetailInternalViewModel.phoneText) ? View.GONE : View.VISIBLE}"
                tools:text="+421 0944 123456" />

            <TextView
                style="@style/PoiDetailItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email"
                android:onClick="@{() -> poiDetailInternalViewModel.onEmailClick()}"
                android:text="@{poiDetailInternalViewModel.emailText}"
                android:visibility="@{TextUtils.isEmpty(poiDetailInternalViewModel.emailText) ? View.GONE : View.VISIBLE}"
                tools:text="sygic@sygic.com" />

            <TextView
                style="@style/PoiDetailItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_web"
                android:onClick="@{() -> poiDetailInternalViewModel.onWebUrlClick()}"
                android:text="@{poiDetailInternalViewModel.urlText}"
                android:visibility="@{TextUtils.isEmpty(poiDetailInternalViewModel.urlText) ? View.GONE : View.VISIBLE}"
                tools:text="http://www.sygic.com" />

            <TextView
                style="@style/PoiDetailItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:onClick="@{() -> poiDetailInternalViewModel.onCoordinatesClick()}"
                android:text="@{poiDetailInternalViewModel.coordinatesText}"
                android:visibility="@{TextUtils.isEmpty(poiDetailInternalViewModel.coordinatesText) ? View.GONE : View.VISIBLE}"
                tools:text="48.126895, 12.214578" />

        </LinearLayout>

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="26dp" />

    </ViewAnimator>

</layout>