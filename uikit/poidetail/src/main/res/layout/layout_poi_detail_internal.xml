<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidElementNotAllowed -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="poiDetailInternalViewModel"
            type="com.sygic.ui.view.poidetail.viewmodel.PoiDetailInternalViewModel" />

    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:parentTag="android.widget.LinearLayout">

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="@{() -> poiDetailInternalViewModel.onHeaderContainerClick()}"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@{poiDetailInternalViewModel.titleText}"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"
                tools:text="Sygic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{poiDetailInternalViewModel.subtitleText}"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                tools:text="MlynskÃ© nivy 16, 821 09 Bratislava" />

        </LinearLayout>

        <TextView
            style="@style/PoiDetailItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_web"
            android:text="@{poiDetailInternalViewModel.urlText}"
            android:visibility="@{poiDetailInternalViewModel.urlText != null ? View.VISIBLE : View.GONE}"
            tools:text="http://www.sygic.com"/>

        <TextView
            style="@style/PoiDetailItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_web"
            android:text="@{poiDetailInternalViewModel.emailText}"
            android:visibility="@{poiDetailInternalViewModel.emailText != null ? View.VISIBLE : View.GONE}"
            tools:text="sygic@sygic.com"/>

        <TextView
            style="@style/PoiDetailItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_web"
            android:text="@{poiDetailInternalViewModel.phoneText}"
            android:visibility="@{poiDetailInternalViewModel.phoneText != null ? View.VISIBLE : View.GONE}"
            tools:text="+421 0944 123456"/>

    </merge>

</layout>